(invo : Œ± ‚Üí Œ±)
(invo_antitone' : ‚àÄ (x y : Œ±), x ‚â§ y ‚Üí invo y ‚â§ invo x)
(invo_involutive' : function.involutive invo)

open has_involution

variables {Œ± : Type u}

postfix `‚Å±`:(max+1) := invo

